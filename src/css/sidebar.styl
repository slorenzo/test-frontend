.sidebar
  background-color sidebar-background-color
  opacity 1

.profile
  background-color summary-background-color
  text-align center

  h1
    text-transform uppercase
    margin-bottom 0

  h2.title
    font-family 'Noto Sans', sans-serif
    margin-top .1rem

  .avatar
    position relative

    img
      width 60%
      border-radius 50%
      margin 5rem 18% 2rem

    .flag
      position absolute
      bottom 0
      right 0
      width 14%
      border .4rem solid summary-background-color

  .location
    position relative
    font-family 'Montserrat', sans-serif
    font-weight normal
    padding-left 1.5rem
    font-style italic
    display inline-block
    margin-top 1rem
    font-weight 100

    &:before
      content ""
      position absolute
      left 0
      width 1rem
      height 1.5rem
      background-image url('../img/location.png')
      background-repeat no-repeat
      background-size contain
  
  .boxes
    lost-utility clearfix
    border-top border-specs
    border-bottom border-specs
    margin-top 20px

    .box
      padding 0.7rem
      transition transitions-delay
      lost-column 1/3 3 0
      box-sizing border-box
      border-right border-specs
      text-transform uppercase
      line-height 5rem
      text-align center

      span
        display inline-block
        vertical-align middle
        line-height normal
        strong
          font-weight bold
          font-size font-size-huge

      &:last-child
        border-right none